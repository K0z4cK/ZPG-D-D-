<Window x:Class="ZPG_DnD_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZPG_DnD_"
        mc:Ignorable="d"
        Title="MainWindow" Height="600
        " Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="47*"/>
            <ColumnDefinition Width="91*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="83*"/>
            <ColumnDefinition Width="83*"/>
            <ColumnDefinition Width="82*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="85*"/>
            <ColumnDefinition Width="129*"/>
            <ColumnDefinition Width="127*"/>
            <ColumnDefinition Width="47*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="11*"/>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="44*"/>
            <RowDefinition Height="34*"/>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="61*"/>
            <RowDefinition Height="60*"/>
            <RowDefinition Height="38*"/>
        </Grid.RowDefinitions>
        <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="5" BorderThickness="2" BorderBrush="Black" Grid.RowSpan="2">
            <TextBlock x:Name="characterName" Text="Name" FontSize="38" FontFamily="Wide Latin"  />
        </Border>
        <TextBlock x:Name="classNlevel" Text="Name" FontSize="16" Grid.Column="7" Grid.RowSpan="2" VerticalAlignment="Bottom" Margin="4,0,0,0" Height="21" Grid.Row="1"/>
        <TextBlock Text="CLASS/LEVEL" FontSize="12" Grid.Row="3" Grid.Column="7" VerticalAlignment="Top" Margin="4,0,0,0" Height="16"/>
        <TextBlock x:Name="background" Text="Name" FontSize="16" Grid.Column="8" Grid.RowSpan="2" VerticalAlignment="Bottom" Margin="10,0,0,0" Height="21" Grid.Row="1"/>
        <TextBlock Text="BACKGROUND" FontSize="12" Grid.Row="3" Grid.Column="8" VerticalAlignment="Top" Margin="10,0,0,0" Height="16"/>
        <TextBlock x:Name="userName"  Text="Name" FontSize="16" Grid.Column="9" Grid.RowSpan="2" VerticalAlignment="Bottom" Margin="10,0,0,0" Height="21" Grid.Row="1"/>
        <TextBlock Text="USER NAME" FontSize="12" Grid.Row="3" Grid.Column="9" VerticalAlignment="Top" Margin="10,0,0,0" Height="16"/>

        <TextBlock x:Name="race" Text="Name" FontSize="16" Grid.Column="7" Grid.Row="3" VerticalAlignment="Bottom" Margin="4,0,0,0" Height="21"/>
        <TextBlock Text="RACE" FontSize="12" Grid.Row="4" Grid.Column="7" VerticalAlignment="Top" Margin="4,0,0,0" Height="16"/>
        <TextBlock x:Name="aligment" Text="Name" FontSize="16" Grid.Column="8" Grid.Row="3" VerticalAlignment="Bottom" Margin="10,0,0,0" Height="21"/>
        <TextBlock Text="ALIGMENT" FontSize="12" Grid.Row="4" Grid.Column="8" VerticalAlignment="Top" Margin="10,0,0,0" Height="16"/>
        <TextBlock x:Name="experiencePt" Text="Name" FontSize="16" Grid.Column="9" Grid.Row="3" VerticalAlignment="Bottom" Margin="10,0,0,0" Height="21"/>
        <TextBlock Text="EXPERIENCE POINTS" FontSize="12" Grid.Row="4" Grid.Column="9" VerticalAlignment="Top" Margin="10,0,0,0" Height="16"/>

        <TextBlock Grid.Column="1" Grid.Row="5" Text="STRENGTH" FontSize="14" HorizontalAlignment="Center" Margin="11,0,10,45" FontWeight="DemiBold" Width="70"/>
        <Border Grid.Column="1" Grid.Row="5" BorderThickness="1" BorderBrush="Black">
            <TextBlock x:Name="strengthNum" Text="Num" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="22,33,23,9"/>
        </Border>
        <TextBlock Grid.Column="1" Grid.Row="6" Text="DEXTERITY" FontSize="14" HorizontalAlignment="Center" Margin="11,0,9,45" FontWeight="DemiBold" Width="71"/>
        <Border Grid.Column="1" Grid.Row="6" BorderThickness="1" BorderBrush="Black">
            <TextBlock x:Name="dexterityNum" Text="Num" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="22,33,23,9"/>
        </Border>
        <TextBlock Grid.Column="1" Grid.Row="7" Text="CONSTITUTION" FontSize="12" HorizontalAlignment="Center" Margin="3,0,2,45" FontWeight="DemiBold" Width="86"/>
        <Border Grid.Column="1" Grid.Row="7" BorderThickness="1" BorderBrush="Black">
            <TextBlock x:Name="constitutionNum" Text="Num" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="22,33,23,9"/>
        </Border>
        <TextBlock Grid.Column="1" Grid.Row="8" Text="INTELLIGENCE" FontSize="12" HorizontalAlignment="Center" Margin="7,0,5,45" FontWeight="DemiBold" Width="79"/>
        <Border Grid.Column="1" Grid.Row="8" BorderThickness="1" BorderBrush="Black">
            <TextBlock x:Name="intelligenceNum" Text="Num" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="22,33,23,9"/>
        </Border>
        <TextBlock Grid.Column="1" Grid.Row="9" Text="WISDOM" FontSize="14" HorizontalAlignment="Center" Margin="17,0,15,45" FontWeight="DemiBold" Width="59"/>
        <Border Grid.Column="1" Grid.Row="9" BorderThickness="1" BorderBrush="Black">
            <TextBlock x:Name="wisdomNum" Text="Num" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="22,33,23,9"/>
        </Border>
        <TextBlock Grid.Column="1" Grid.Row="10" Text="CHARISMA" FontSize="14" HorizontalAlignment="Center" Margin="10,0,9,45" FontWeight="DemiBold" Width="72"/>
        <Border Grid.Column="1" Grid.Row="10" BorderThickness="1" BorderBrush="Black">
            <TextBlock x:Name="charismaNum" Text="Num" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="22,33,23,9"/>
        </Border>

        <TextBlock Grid.Column="3" Grid.Row="5" Text="ARMOR" FontSize="14" HorizontalAlignment="Center" Margin="16,32,16,0" FontWeight="DemiBold" Width="51"/>
        <TextBlock Grid.Column="3" Grid.Row="5" Text="CLASS" FontSize="14" HorizontalAlignment="Center" Margin="21,44,21,0" FontWeight="DemiBold" Width="41"/>
        <Border Grid.Column="3" Grid.Row="5" BorderThickness="1" BorderBrush="Black" Height="66" VerticalAlignment="Top">
            <TextBlock x:Name="armorClassNum" Text="Name" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="23,9,23,34"/>
        </Border>
        <TextBlock Grid.Column="4" Grid.Row="5" Text="INTITIATIVE" FontSize="12" HorizontalAlignment="Center"  FontWeight="DemiBold" TextAlignment="Center" Margin="5,40,5,10" Width="73" />
        <Border Grid.Column="4" Grid.Row="5" BorderThickness="1" BorderBrush="Black" Height="66" VerticalAlignment="Top">
            <TextBlock x:Name="initiativeNum" Text="Name" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="23,9,23,34"/>
        </Border>
        <TextBlock Grid.Column="5" Grid.Row="5" Text="SPEED" FontSize="16" HorizontalAlignment="Center"  FontWeight="DemiBold" TextAlignment="Center" Width="64" Margin="9,38,9,0" />
        <Border Grid.Column="5" Grid.Row="5" BorderThickness="1" BorderBrush="Black" Height="66" VerticalAlignment="Top">
            <TextBlock x:Name="speedNum" Text="Name" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="23,9,23,34"/>
        </Border>

        <TextBlock Grid.Column="4" Grid.Row="6" Text="HP" FontSize="16" HorizontalAlignment="Center"  FontWeight="DemiBold" TextAlignment="Center" Width="64" Margin="9,0,10,0"  />
        <Border Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="6" BorderThickness="1" BorderBrush="Black" Height="35" VerticalAlignment="Top" Margin="0,20,0,0">
            <TextBlock x:Name="healthPoints" Text="Name" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Border>

        <TextBlock Grid.Column="7" Grid.Row="5" Text="Equipment" FontSize="16" HorizontalAlignment="Center"  FontWeight="DemiBold" TextAlignment="Center" Width="79" Margin="6,0,0,0"  />
        <Border Grid.Column="7" Grid.ColumnSpan="3" Grid.Row="5" Grid.RowSpan="2" BorderThickness="1" BorderBrush="Black" Height="102" VerticalAlignment="Top" Margin="0,20,0,0">
        </Border>
        <TextBlock x:Name="armor" Text="Armor:" Grid.Column="7"  Grid.Row="5"  FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4,21,0,24" Grid.ColumnSpan="2" Width="143"  />
        <TextBlock x:Name="weapon" Text="Weapon:" Grid.Column="8"  Grid.Row="5"  FontSize="12" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,23,10,26" Grid.ColumnSpan="2" Width="168"  />
        <TextBlock x:Name="head" Text="Head:" Grid.Column="7"  Grid.Row="5"  FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="4,65,0,0" Grid.RowSpan="2" Grid.ColumnSpan="2" Width="154" />
        <TextBlock x:Name="amulet" Text="Amulet:" Grid.Column="7"  Grid.Row="6"  FontSize="12" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4,25,0,18" Grid.ColumnSpan="2" Width="161" />
        <TextBlock x:Name="gloves" Text="Gloves:" Grid.Column="8"  Grid.Row="5"  FontSize="12" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,65,10,0" Grid.RowSpan="2" Grid.ColumnSpan="2" Width="168" />
        <TextBlock x:Name="boots" Text="Boots:" Grid.Column="8"  Grid.Row="6"  FontSize="12" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,25,10,18" Grid.ColumnSpan="2" Width="161" />



        <TextBlock Grid.Column="4" Grid.Row="7" Text="Inventory" FontSize="16" HorizontalAlignment="Center"  FontWeight="DemiBold" TextAlignment="Center" Width="72" Margin="5,0,6,0"  />
        <Border Grid.Column="3" Grid.ColumnSpan="3" Grid.Row="7" Grid.RowSpan="4" BorderThickness="1" BorderBrush="Black" Height="233" VerticalAlignment="Top" Margin="0,20,0,0">
            <ListView x:Name="LVinventory">
            </ListView>
        </Border>
        <TextBlock x:Name="coins" Text="Coins: 0" Grid.Column="3" Grid.Row="11" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="1,0,0,0"  />

        <TextBlock Grid.Column="7" Grid.Row="7" Text="Skills" FontSize="16" HorizontalAlignment="Center"  FontWeight="DemiBold" TextAlignment="Center" Width="81" Margin="4,0,0,0"  />
        <Border Grid.Column="7" Grid.ColumnSpan="3" Grid.Row="7" Grid.RowSpan="4" BorderThickness="1" BorderBrush="Black" Height="233" VerticalAlignment="Top" Margin="0,20,0,0">
            <ListView>
                <TextBlock x:Name="acrobatics" Text="Acrobatics" FontSize="13.5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock x:Name="animalHandling" Text="Animal Handling" FontSize="13.5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock x:Name="athletics" Text="Athletics" FontSize="13.5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock x:Name="medicine" Text="Medicine" FontSize="13.5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock x:Name="performance" Text="Performance" FontSize="13.5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock x:Name="persuasion" Text="Persuasion" FontSize="13.5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock x:Name="religion" Text="Religion" FontSize="13.5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock x:Name="sleightOfHand" Text="Sleight Of Hand" FontSize="13.55" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock x:Name="stealth" Text="Stealth" FontSize="13.5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <TextBlock x:Name="survival" Text="Survival" FontSize="13.5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </ListView>
        </Border>
    </Grid>
</Window>
